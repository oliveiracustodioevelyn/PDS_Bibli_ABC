<Window x:Class="ProjetoBibliABC.Views.Cadastro_Livro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoBibliABC.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Cadastro_Livro" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>



        <Grid Grid.Row="0" Background="#FFF9F5F5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Margin="15">
                <Label Content="Informações do Livro" FontSize="20"/>

                <UniformGrid Columns="1" Margin="0 5">
                    <StackPanel Orientation="Horizontal">
                        <TextBox 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        materialDesign:HintAssist.Hint="Cod. Livro"
                        x:Name="txtCodigo" Padding="8" Margin="0 0 5 0"/>
                        <TextBox 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        materialDesign:HintAssist.Hint="Título"
                        x:Name="txtTitulo" Padding="8" Margin="0 0 0 5" Width="1084" Cursor="IBeam"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <DatePicker 
                    x:Name="dtPublicacao"
                    Style="{StaticResource MaterialDesignFilledDatePicker}"
                    materialDesign:HintAssist.Hint="Data de Publicacao" Padding="8" Width="260"/>
                        <TextBox 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        materialDesign:HintAssist.Hint="Ano"
                        x:Name="txtAno" Padding="8" Width="246" Margin="10 0 0 0" />

                        <TextBox 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        materialDesign:HintAssist.Hint="N° Exemplar"
                        x:Name="txtExemplar" Padding="8" Width="257" Margin="10 0 0 0" />

                    </StackPanel>


                </UniformGrid>
               
                <UniformGrid Columns="1" Margin="0 5">
                    <TextBox 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Center"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        materialDesign:HintAssist.Hint="N° Exemplar"
                        x:Name="txtNum" Padding="8" Cursor="IBeam" Margin="0 5" Width="150" HorizontalAlignment="Left"/>

                    <ComboBox
                        materialDesign:HintAssist.Hint="Editora"
                        x:Name="CbEditora" Padding="10" Width="105" Margin="60 -100 0 0" />
                    <TextBox 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        materialDesign:HintAssist.Hint="N° Páginas"
                        x:Name="txtPag" Padding="8" Cursor="IBeam"/>

                    <TextBox 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        materialDesign:HintAssist.Hint="Edicao"
                        x:Name="txtEdicao" Padding="2"/>


                </UniformGrid>


                <UniformGrid Columns="2" Margin="0 5">
                    <TextBox 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        materialDesign:HintAssist.Hint="Tipo"
                        x:Name="txtTipo" Padding="8" Margin="0 0 5 0"/>

                    <TextBox 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        materialDesign:HintAssist.Hint="ISBN"
                        x:Name="txtIsbn" Padding="8"/>



                </UniformGrid>

            </StackPanel>

        </Grid>

        <Button Grid.Row="2" Content="Salvar"  Margin="10,9,10,9" Cursor="Hand" Background="#FFF5F4F3" />

    </Grid>
</Window>
